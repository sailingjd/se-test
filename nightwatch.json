{

	"src_folders" : ["tests"],
	"output_folder" : "reports",
	"custom_commands_path" : "custom_commands",
	"custom_assertions_path" : "",
	"page_objects_path" : "",
	"globals_path" : "",

		"selenium" : {
			"start_process" : true,
			"server_path" : "bin/selenium-server-standalone-2.53.0.jar",
			"log_path" : "reports",
			"host" : "127.0.0.1",
			"port" : 4444,
			"cli_args" : {
				"webdriver.gecko.driver": "bin/geckodriver.exe.",
				"webdriver.chrome.driver" : "bin/chromedriver.exe",
				"webdriver.ie.driver" : "bin/iedriverserver.exe"
			}
		},

	"test_settings" : {
			"default" : {
				"launch_url" : "http://www.medhok.com",
				"silent": true,
				"screenshots" : {
					"enabled" : true,
					"on_failure" : false,
					"on_error" : false,
					"path" : ""
				},
				"desiredCapabilities": {
				"browserName": "firefox",
				"javascriptEnabled": true,
				"marionette": false,
				"acceptSslCerts": true
				}
		},

				"chrome" : {
					"desiredCapabilities": {
					"browserName": "chrome",
					"javascriptEnabled": true,
					"acceptSslCerts": true,
					"chromeOptions": {
							"args":["--window-size=1600,800"]
						}
					}
				}
		}
}
